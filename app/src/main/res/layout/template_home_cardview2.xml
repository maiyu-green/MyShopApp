<?xml version="1.0" encoding="utf-8"?>
<!--采用CardView，放置商品显示页面-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"
    app:contentPadding="10dp"

    app:cardCornerRadius="4dp">


<!--采用LinearLayout:放置一个textView,view,水平linearLayout-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="热门活动"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:paddingTop="5dp"


            />
        <View
            style="@style/line_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"></View>




        <!--水平linearLayout:放置竖直linearLayout,view,imageView-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--竖直linearLayout:放置imageView,view,imageView-->
            <LinearLayout
                android:id="@+id/layout_left"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgview_small_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_0_small1" />
                <View
                    android:id="@+id/line2"
                    style="@style/line_vertical" />
                <ImageView
                    android:id="@+id/imgview_small_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_0_small2" />
            </LinearLayout>

            <View
                android:id="@+id/line"
                style="@style/line_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:paddingLeft="40dp"
                android:id="@+id/imgview_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_big_0"
                />





        </LinearLayout>


    </LinearLayout>




</android.support.v7.widget.CardView>


